<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Football Club Database</title>
    <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/style.css'>
</head>

<body>
    
      <header> 
        <h1>Football Club Database</h1>
      </header>

      <nav>
        <ul class="navbar">
          <li><a href="/index.html"><i class="fa fa-fw fa-home"></i>Home</a></li>
          <li><a href="/search.html">Search</a></li>
          <li><a href="/add.html">Add</a></li>
          <li><a href="/update.html">Update</a></li>
          <li><a href="/delete.html">Delete</a></li>
          <li>
            <form action="/displayclubs" method="get">
              <button>Display</button>
            </form>
          </li>
          <li class="help"><a href="/help.html">Help</a></li>
        </ul>
      </nav>

      <div class="table">

        <h4> Football Clubs</h4>

        <table>
          <tr class="columns">
          <th>Team</th>
          <th>Manager</th>
          <th>Short Name</th>
          <th>Year Founded</th>
          <th>Home Stadium</th>
          <th>League</th>
          <th>Country</th>
          </tr>

          <% rows.forEach(function(r) { %>
            <tr>
              <td> <a href="/<%=r.team%> "><%= r.team %></a> </td>
              <td> <%= r.manager %> %></td>
              <td> <%= r.sname %></td>
              <td> <%= r.yearf %></td>
              <td> <%= r.homestd %></td>
              <td> <%= r.league %></td>
              <td> <%= r.country %></td>
            </tr>
  
          <% }); %>
        </table>

      </div>



</body>
</html>
